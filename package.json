{
  "private": true,
  "scripts": {
    "dev": "git fetch && pnpm install && concurrently --names \"front-end,back-end\" \"pnpm run dev:front-end\" \"pnpm run dev:back-end\"",
    "dev:front-end": "cd ./front-end && pnpm run dev",
    "dev:back-end": "cd ./back-end && pnpm run dev",
    "deploy": "concurrently --names \"front-end,back-end\" \"pnpm run deploy:front-end\" \"pnpm run deploy:back-end\"",
    "deploy:front-end": "cd ./front-end && pnpm run deploy",
    "deploy:back-end": "cd ./back-end && pnpm run deploy",
    "lint": "concurrently --names \"front-end,back-end\" \"pnpm run lint:front-end\" \"pnpm run lint:back-end\"",
    "format": "concurrently --names \"front-end,back-end\" \"pnpm run format:front-end\" \"pnpm run format:back-end\"",
    "lint:front-end": "cd ./front-end && pnpm run lint",
    "lint:back-end": "cd ./back-end && pnpm run lint",
    "format:front-end": "cd ./front-end && pnpm run format",
    "format:back-end": "cd ./back-end && pnpm run format"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
